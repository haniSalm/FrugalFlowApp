<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="16dp">

    <TextView android:id="@+id/tvIncomeName" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Source Name"
        android:textSize="18sp" android:textStyle="bold"/>

    <TextView android:id="@+id/tvIncomeAmount" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="$0.00"/>

    <TextView android:id="@+id/tvIncomeGrowth" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="+0%"/>
</LinearLayout>
