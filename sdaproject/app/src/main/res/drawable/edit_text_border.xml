<!-- res/drawable/edit_text_border.xml -->

<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color inside the border (white) -->
    <solid android:color="#FFFFFF"/>

    <!-- Border color and thickness (light grey) -->
    <stroke android:color="#E0E0E0" android:width="2dp" />

    <!-- No rounded corners, so we don't include the <corners> element -->

    <!-- Padding inside the EditText to ensure text doesn't touch the border -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
